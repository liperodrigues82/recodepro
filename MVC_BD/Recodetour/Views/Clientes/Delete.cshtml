@model Recodetour.Models.Cliente

@{
    ViewData["Title"] = "Deletar";
}

<div class="container-fluid painel1">
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-lg-3 g-3 py-4">
        <div class="col">
            <div class="card card-cover h-100 overflow-hidden text-dark bg-light rounded-4 shadow-lg">
                <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-1">

                    <h1>Deletar</h1>

                    <h3>Deseja mesmo deletar?</h3>
                    <div>
                        <h4>Cliente</h4>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Rg)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Rg)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Telefone)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Telefone)
                            </dd>
                        </dl>
    
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Deletar" class="btn btn-danger" /> |
                            <a asp-action="Index">Voltar</a>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
  </div>
</div>
